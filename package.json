{
  "name": "logic-specification",
  "displayName": "Logic Specification",
  "description": "Language support for logic specification",
  "publisher": "Henry-YSLin",
  "version": "0.1.2",
  "bugs": {
    "url": "https://github.com/Henry-YSLin/logic-specification/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Henry-YSLin/logic-specification.git"
  },
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "languages": [
      {
        "id": "logicspec",
        "aliases": [
          "Logic Specification",
          "logicspec"
        ],
        "extensions": [
          ".logic"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "logicspec",
        "scopeName": "source.logicspec",
        "path": "./syntaxes/logicspec.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "logicspec",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "grammar": "cd src/ && antlr4 -Dlanguage=JavaScript logicspec.g4",
    "compile": "babel ./src --out-dir ./out && tsc -p ./",
    "watch": "concurrently \"babel --watch ./src --out-dir ./out\" \"tsc -watch -p ./\"",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "dependencies": {
    "antlr4": "^4.9.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/preset-env": "^7.13.10",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-plugin-add-module-exports": "^1.0.4",
    "concurrently": "^6.0.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vsce": "^1.87.0",
    "vscode-test": "^1.5.0"
  }
}
